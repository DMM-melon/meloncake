<h2>注文一覧画面</h2>

<table class="table table-hover table-inverse">
    <thead>
    <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    </tr>
    </thead>

    <tbody>
<% @orders.each do |order| %>
    <tr>
        <td><%= link_to order.created.at, order_path %></td>
        <td><%= order.customer_id %></td>
        <td>個数合計</td>
        <td><%= order.order_status %></td>
    <% end %>
    </tr>
    </tbody>
</table>