<div class='body'>
  <div class='container'>
  <h2>会員一覧画面</h2>

    <div class="col-lg-12">
    <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
    </tr>
  </thead>

    <tbody>
    <% @customers.each do |customer| %>
    <tr>
     <td><%= customer.id %></td>
     <td><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>
     <td><%= customer.email %></td>
     <td><% if customer.deleted_at.nil? %>
          <%= "有効" %>
          <% else %>
          <%= "退会済み" %>
          <% end %>
     <% end %>
    </tr>
    </tbody>
    </table>
    </div>
  </div>
</div>
