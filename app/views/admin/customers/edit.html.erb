<div class="container">
	<h2>会員編集画面</h2>
		<div class="low">
			<%= form_for [:admin, @customer] do |f| %>
			<p>氏名</p>
			<%= f.text_field :first_name %>
        	<%= f.text_field :last_name %>
        	<p>カナ</p>
        	<%= f.text_field :first_name_kana %>
            <%= f.text_field :last_name_kana %>
            <p>郵便番号</p>
            <%= f.text_field :postcode %>
            <p>住所</p>
            <%= f.text_field :address %>
            <p>電話番号</p>
            <%= f.telephone_field :phone %>
            <p>メールアドレス</p>
            <%= f.email_field :email %>
            <p>会員ステータス</p>

            <% if @customer.deleted_at.nil? %>
             <label><%= f.radio_button :deleted_at, :true, {:checked => true} %>現会員</label>
             <label><%= f.radio_button :deleted_at, :false %>退会済み</label>

             <% else %>

            <label><%= f.radio_button :deleted_at, :true %>現会員</label>

            <label><%= f.radio_button :deleted_at, :false, {:checked => true} %>退会済み</label>

            <% end %>

            <p><%= f.submit "変更を保存する" %></p>
            <% end %>
		</div>
</div>

