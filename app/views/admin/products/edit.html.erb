<div class="container">
<h2>商品編集画面</h2>
	<div class="low">
		<%= form_for [:admin, @product] do |f| %>

  		<div class='col-xs-5'>


  		<%= f.attachment_field :image %>
        </div>
        <div class='col-xs-5'>
  		<p>商品名</p>
  		<%= f.text_field :name %>

  		<p>商品説明</p>
  		<%= f.text_area :introduction %>

  		<p>ジャンル</p>
      <%= f.select :genre_id, Genre.all.map { |str| str.variety } %>

  		<p>税抜き価格</p>
  		<%= f.text_field :price %>

  		<p>販売ステータス</p>
      <%= f.select :product_status, Product.product_statuses.keys.to_a, {} %>
        </div>
        <div class='col-xs-2'>
		<%= f.submit "変更を保存" %>
		</div>
	<% end %>

	</div>

</div>