<% if flash[:alert] %>
<div class="alert alert-warning alert-dismissible fade in" role="alert">
  <button type="button" data-dismiss="alert" class="close">&times;</button>
  <h4><%= flash[:alert] %></h4>
</div>
<% end %>

<% if flash[:notice] %>
  <h4><%= flash[:notice] %></h4>
<% end %>


<h2>ジャンル追加・一覧</h2>

<h3>ジャンル追加</h3>
<%= form_for [:admin, @genre] do |f| %>
  <label>ジャンル<%= f.text_field :variety %></label>
  <label><%= f.radio_button :genre_status, "有効" %> 有効 </label>
  <label><%= f.radio_button :genre_status, "無効" %> 無効 </label>
  <%= f.submit "追加" %>
<% end %>
<br>
<br>

<div class = "col-lg-5">
<table class="table table-hover table-inverse">
    <thead>
    <tr>
    <th>ジャンル</th>
    <th>状態</th>
    <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
<% @genres.each do |genre| %>
    <tr>
        <td><%= genre.variety %></td>
        <td><%= genre.genre_status %></td>
		<td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    <% end %>
    </tr>
    </tbody>
</table>
</div>
