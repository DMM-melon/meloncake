<div class="container">
	<h1>注文履歴詳細</h1>
	<div class="row">
		<div class="col-lg-7">
			<h2>注文情報</h2>
			<table class="table table-bordered">
				<tbody>
					<tr>
						<td>注文日</td>
						<td><%= @order.created_at %></td>
					</tr>
					<tr>
						<td>配送先</td>
						<td><%= @order.address %></td>
					</tr>
					<tr>
						<td>支払方法</td>
						<td><%= @order.payment %></td>
					</tr>
					<tr>
						<td>ステータス</td>
						<td><%= @order.order_status %></td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-lg-5">
			<h2>請求情報</h2>
			<table class="table table-bordered">
				<tbody>
					<tr>
						<td>商品合計</td>
						<td>1,500</td>
					</tr>
					<tr>
						<td>配送料</td>
						<td>800</td>
					</tr>
					<tr>
						<td>ご請求額</td>
						<td>2,300</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<h2>注文内容</h2>
	<table class= "table table-bordered">
		<thead>
			<th>商品</th>
			<th>単価（税込）</th>
			<th>個数</th>
			<th>小計</th>
		</thead>
		<tbody>
			
		</tbody>
	</table>
</div>