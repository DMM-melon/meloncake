<h1>注文履歴一覧</h1>
<table class="table table-hover table-inverse">
    <thead>
    <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
    <th></th>
    </tr>
    </thead>

    <tbody>
<% @orders.each do |f| %>
    <tr>
    	<td><%= f.created_at %></td>
        <td><%= f.address %></td>
        <td>注文商品</td>
        <td>支払金額</td>
		<td>ステータス</td>
		<td><%= link_to "注文詳細", order_path(f.id) %></td>
    </tr>
    <% end %>
    </tbody>
</table>