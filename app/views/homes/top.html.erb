<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<!-- トップページ -->
<main-top>
</main-top>
<body>
<div class="main">
<div class="container">
	<div class="row">

	<div class="col-lg-3">
		<div class="genre-box">
		<div class="title">
			<h4>ジャンル検索</h4>
		</div>
		<div class="genres">
			<% @genres.each do |genre| %>
			<br><%= link_to genre.variety, products_path(genre_id: genre.id) %><br>
			<% end %>
		</div>
		</div>

		<div class="search-box">
		<div class="title">
			<h4>商品検索</h4>
		</div>
　　　　　<%= form_tag(homes_search_path,:method => 'post') do %>
         <%= text_field_tag :search %>
         <%= submit_tag '検索', :name => nil %>
　　　　　<% end %>
		</div>
	</div>

	<div class="products col-lg-9">
		<h3 class="product-title">商品一覧</h3>
		<div class="row">
			<% @products.each do |product| %>
			<div class="product-box col-lg-3">
				<p class="image">
				<%= link_to product_path(product) do %>
				<%= attachment_image_tag product, :image, :fill, 180, 180 %>
				<% end %></p>
			<br><%= product.name %><br>
			<br><%= number_to_currency(product.price * @tax ) %><br>
			</div>
			<% end %>
		</div>
	<%= paginate @products %>
	</div>
	</div>
	</div>
	</div>
</div>
</body>


