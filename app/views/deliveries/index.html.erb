<div class ="container">
  <div class ="row">
    <%= @error_msg %>
    <h2>配送先一覧</h2>
      <div class ="col-lg-3">

        <table>
        <%= form_for(@delivery, url: deliveries_path) do |f| %>
          <tr><th>郵便番号</th><td><%= f.text_field :postcode, :size=>"25" %></td></tr>
          <tr><th>住所</th><td><%= f.text_area :address, :size=>"23x3" %></td></tr>
          <tr><th>宛名</th><td><%= f.text_field :name, :size=>"25" %></td></tr>
        </table>
        <%= f.submit "登録する" %>
        <% end %>
      </div>

      <div class = "col-lg-9">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.postcode %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
              <td><%= link_to "編集", edit_delivery_path(delivery) %></td>
              <td><%= link_to "削除", delivery_path(delivery), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>