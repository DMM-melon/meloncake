<h2>配送先一覧</h2>

<%= form_for(@delivery, url: deliveries_path) do |f| %>

<label>郵便番号<%= f.text_field :postcode %></label>
<label>住所<%= f.text_field :address %></label>
<label>宛名<%= f.text_field :name %></label>
<%= f.submit "登録する" %>
<% end %>


<div class = "col-lg-5">
<table class="table table-hover table-inverse">
    <thead>
    <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
<% @deliveries.each do |delivery| %>
    <tr>
        <td><%= delivery.postcode %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
		<td><%= link_to "編集", edit_delivery_path(delivery) %></td>
		<td><%= link_to "削除", delivery_path(delivery), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    <% end %>
    </tr>
    </tbody>
</table>
</div>