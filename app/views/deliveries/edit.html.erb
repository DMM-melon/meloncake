<div class ="container">
  <div class ="row">

	<h2>配送先編集</h2>
	<br>
	<%= @error_msg %>

	<table>
		<%= form_for (@delivery) do |f| %>
		<tr><th>郵便番号  </th><td><%= f.text_field :postcode %></td></tr>
		<tr><th>住所  </th><td><%= f.text_area :address, :size=>"40x3" %></td></tr>
		<tr><th>宛名  </th><td><%= f.text_field :name %></td></tr>
	</table>
	<br><br>
	<%= f.submit "変更を保存する" %>
	<% end %>

  </div>
</div>