<!-- 商品詳細 -->
<div class="container">
	<div class="row">

	<div class="col-lg-3">
		<h3>ジャンル検索</h3>
		<% @genres.each do |genre| %>
		<%= link_to genre.variety, products_path(genre_id: genre.id) %>
		<% end %>
	</div>

<div class='col-xs-5'>
		<p>商品画像</p>
    	<%= attachment_image_tag @product, :image, :fill, 200, 200 %>

    	<div class='col-xs-5'>
		<p>商品名 <%= @product.name %> </p>

		<p>商品説明 <%= @product.introduction %> </p>

		<p>ジャンル <%= @product.genre.variety %> </p>

		<p>税込価格（税抜価格) <%= number_to_currency(@product.price * @tax ) %> (<%= number_to_currency(@product.price) %>)
        </p>
		</div>
	</div>


	</div>
</div>