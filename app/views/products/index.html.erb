<!-- 商品一覧 -->
<div class="container">
	<div class="row">

	<div class="col-lg-3">
		<h3>ジャンル検索</h3>
		<% @genres.each do |genre| %>
		<br><%= link_to genre.variety, products_path(genre_id: genre.id) %><br>
		<% end %>
	</div>

	<div class="col-lg-9">
		<h2><%= @title %></h2><p>(全 <%= @products.count %> 件)</p>
		<% @products.each do |product| %>
		<br><%= attachment_image_tag product, :image, :fill, 200, 200 %><br>
		<br><%= link_to product.name, product_path(product) %><br>
		<br><%= number_to_currency(product.price * @tax ) %><br>
		<% end %>

	</div>
	</div>
</div>

