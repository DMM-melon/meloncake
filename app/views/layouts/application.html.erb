<!DOCTYPE html>
<html>
  <head>
    <title>Meloncake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class='nav navbar-nav navbar-left' >
         <p class="navbar-text"><%= link_to "MELONCAKE", root_path %></p>
        </nav>
         <nav>
          <ul class="nav navbar-nav navbar-right">

              <% if admin_signed_in? %>
                  <li><%= link_to "商品一覧", admin_products_path %></li>
                  <li><%= link_to "会員一覧", admin_customers_path %></li>
                  <li><%= link_to "注文履歴一覧", admin_orders_path(button: 1) %></li>
                  <li><%= link_to "ジャンル管理", admin_genres_path %></li>
                  <button type="button" class="btn btn-default navbar-btn"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></button>
                  <!--  -->
                  <form class="navbar-form navbar-left" role="search">
                  <div class="form-group">
                  <input type="text" class="form-control" placeholder="検索キーワード">
                  </div>
                  <button type="submit" class="btn btn-default">検索</button>
                  </form>
                  <p class="navbar-text">管理ログイン中</p>
              <% elsif customer_signed_in? %>
                  <li><%= link_to "カート", cart_items_path %></li>
                  <li><%= link_to "about", homes_about_path %></li>
                  <li><%= link_to "マイページ", customer_path(current_customer) %></li>
                  <button type="button" class="btn btn-default navbar-btn"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></button>
                  <form class="navbar-form navbar-left" role="search">
                  <div class="form-group">
                  <input type="text" class="form-control" placeholder="検索キーワード">
                  </div>
                  <button type="submit" class="btn btn-default">検索</button>
                  </form>
                  <p class="navbar-text">ログイン中</p>
              <% else %>
                  <li><%= link_to "Home", root_path %></li>
                  <li><%= link_to "About", homes_about_path %></li>
                  <li><%= link_to "新規登録", new_customer_registration_path %></li>
                  <button type="button" class="btn btn-default navbar-btn"><%= link_to "ログイン", new_customer_session_path %></button>
                  <form class="navbar-form navbar-left" role="search">
                  <div class="form-group">
                  <input type="text" class="form-control" placeholder="検索キーワード">
                  </div>
                  <button type="submit" class="btn btn-default">検索</button>
                  </form>
                  <li><p class="navbar-text">未ログイン</p></li>
              <% end %>

          </ul>
         </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>

