<h2>登録情報変更
<%= link_to "退会する", bye_customer_path(@customer.id), class: "btn btn-lg btn-primary" %>
</h2>
 <%= form_for(@customer, url:"/customers/#{@customer.id}") do |f| %>
<table class="table table-hover table-inverse">

  <tr>
    <th>氏名</th>
    <td>
    	<%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
    </td>
  </tr>

  <tr>
    <th>カナ</th>
    <td>
    	<%= f.text_field :first_name_kana %>
        <%= f.text_field :last_name_kana %>
    </td>
  </tr>

  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postcode %></td>
  </tr>

  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <th>電話番号</th>
    <td><%= f.telephone_field :phone %></td>
  </tr>
<td><%= f.submit '編集内容を保存する' %></td>
</table>

<% end %>